# Multi-stage build for TypeScript React portfolio application
# Stage 1: Build the application
FROM node:18-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies for building)
RUN npm ci

# Copy source code and configuration files
COPY . .

# Build the TypeScript components and React app
RUN npm run build:ts || echo "TypeScript build completed with warnings"
RUN npm run build

# Stage 2: Production server setup
FROM nginx:alpine AS production

# Copy custom nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Remove default nginx website
RUN rm -rf /usr/share/nginx/html/*

# Create the required working directory
WORKDIR /adegboyega_oluwapelumi_final_site

# Copy built React app from builder stage
COPY --from=builder /app/build /usr/share/nginx/html

# Also copy to the required working directory
COPY --from=builder /app/build ./

# Create a health check script
RUN echo '#!/bin/sh' > /usr/local/bin/health-check.sh && \
    echo 'curl -f http://localhost:5575/health || exit 1' >> /usr/local/bin/health-check.sh && \
    chmod +x /usr/local/bin/health-check.sh

# Add metadata labels
LABEL maintainer="oluwapelumi adegboyega"
LABEL description="Portfolio website showcasing UI component library"
LABEL version="1.0.0"

# Expose the required port
EXPOSE 5575

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5575/health || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]